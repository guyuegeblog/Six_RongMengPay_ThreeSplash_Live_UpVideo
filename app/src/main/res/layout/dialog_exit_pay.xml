<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="400dp"
        android:background="@drawable/newdialogbg"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="5dp">

        <TextView
            android:text="支付宝大减价优惠10元"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/exit_images"
            android:layout_width="match_parent"
            android:layout_height="180dp" />

        <LinearLayout
            android:id="@+id/dialog_newshikanpay_48"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:gravity="right|center"
            android:background="@drawable/newdialog25"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/price"
                android:text="25"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_red"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <!--<ImageButton-->
        <!--android:id="@+id/dialog_newshikanpay_68"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="60dp"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:background="@drawable/newdialog28" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/dialog_newshikanpay_weixin"
                    android:layout_width="125dp"
                    android:layout_height="75dp"
                    android:background="@drawable/newdialogweixin" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/dialog_newshikanpay_zhifubao"
                    android:layout_width="125dp"
                    android:layout_height="75dp"
                    android:background="@drawable/newdialogzhifubaoselect" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>