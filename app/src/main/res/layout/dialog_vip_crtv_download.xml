<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="330dp"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/tantv_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/vpn_text_decription"
            android:layout_width="wrap_content"
            android:textColor="@color/shenhong"
            android:textSize="17sp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="80dp"
            android:textStyle="bold"
            android:text="@string/zhou0"
            android:layout_height="wrap_content" />


        <ImageButton
            android:id="@+id/dialog_vipdownload_down"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_vpn_download" />

        <ImageView
            android:id="@+id/close_vpn"
            android:src="@drawable/tan3_close"
            android:layout_gravity="right"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </FrameLayout>
</LinearLayout>