<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="330dp"
        android:layout_height="250dp">

        <TextView
            android:id="@+id/vpn_text_decription"
            android:layout_width="wrap_content"
            android:textColor="@color/shenhong"
            android:textSize="17sp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center|right|bottom"
            android:layout_marginBottom="80dp"
            android:textStyle="bold"
            android:text="@string/zhou0"
            android:layout_height="wrap_content" />


        <ImageButton
            android:id="@+id/dialog_vipdownload_down"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="@drawable/tan4_xiazai" />
    </FrameLayout>
</LinearLayout>