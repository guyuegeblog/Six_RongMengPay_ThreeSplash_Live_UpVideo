<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bofang_tou"
                android:id="@+id/tou"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                />
            <ImageButton
                android:id="@+id/activity_showvideo_tijiaobutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/bofang_tijiao" />

            <EditText
                android:id="@+id/activity_showvideo_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:hint="我要评论"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:background="@drawable/bofang_editbg"
                android:inputType="text"
                android:textColor="@android:color/black"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/tou"
                android:layout_toLeftOf="@+id/activity_showvideo_tijiaobutton"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
